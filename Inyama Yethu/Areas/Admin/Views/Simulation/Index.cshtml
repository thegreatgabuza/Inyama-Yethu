@model IEnumerable<Inyama_Yethu.Models.Animal>

@{
    ViewData["Title"] = "Pig Farm Simulation";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1>Pig Farm Simulation</h1>
    
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Simulation Controls</h5>
                    <p class="card-text">Run simulations for the pig farm operations</p>
                    <a asp-action="RunSimulation" class="btn btn-primary">Run Simulation</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Farm Statistics</h5>
                    <p><strong>Total Animals:</strong> @Model.Count()</p>
                    <p><strong>Boars:</strong> @Model.Count(a => a.Type == Inyama_Yethu.Models.AnimalType.Boar)</p>
                    <p><strong>Sows:</strong> @Model.Count(a => a.Type == Inyama_Yethu.Models.AnimalType.Sow)</p>
                    <p><strong>Piglets:</strong> @Model.Count(a => a.Type == Inyama_Yethu.Models.AnimalType.Piglet)</p>
                    <p><strong>Weaners:</strong> @Model.Count(a => a.Type == Inyama_Yethu.Models.AnimalType.Weaner)</p>
                    <p><strong>Growers:</strong> @Model.Count(a => a.Type == Inyama_Yethu.Models.AnimalType.Grower)</p>
                    <p><strong>Finishers:</strong> @Model.Count(a => a.Type == Inyama_Yethu.Models.AnimalType.Finisher)</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info">
            @TempData["Info"]
        </div>
    }

    <h3>Current Animals</h3>
    
    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <p>There are no animals in the simulation database. You need to seed the initial pigs to start the simulation.</p>
            <a asp-action="SeedAnimals" class="btn btn-success mt-2">Seed 10 Pigs (2 Boars, 8 Sows)</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Tag</th>
                        <th>Type</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Status</th>
                        <th>Weight</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var animal in Model)
                    {
                        <tr>
                            <td>@animal.TagNumber</td>
                            <td>@animal.Type</td>
                            <td>@animal.Gender</td>
                            <td>@((DateTime.Now - animal.BirthDate).Days / 30) months</td>
                            <td>@animal.Status</td>
                            <td>@(animal.Weight.HasValue ? $"{animal.Weight:F1} kg" : "N/A")</td>
                            <td>
                                <a asp-action="PigDetail" asp-route-id="@animal.Id" class="btn btn-sm btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div> 