@{
    ViewData["Title"] = "Profitability Report";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    
    var monthlyData = ViewData["MonthlyData"] as List<dynamic>;
    var yearlyTotals = ViewData["YearlyTotals"] as dynamic;
    var yearlyProfitMargin = (double)ViewData["YearlyProfitMargin"];
    var selectedYear = (int)ViewData["SelectedYear"];
    var availableYears = ViewData["AvailableYears"] as List<int>;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Profitability Report</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Financial Records</a></li>
        <li class="breadcrumb-item active">Profitability Report</li>
    </ol>
    
    <!-- Year Selection -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-calendar me-1"></i>
            Report Year
        </div>
        <div class="card-body">
            <form asp-action="ProfitabilityReport" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="year" class="form-label">Select Year</label>
                    <select class="form-select" id="year" name="year">
                        @foreach (var year in availableYears)
                        {
                            <option value="@year" selected="@(year == selectedYear)">@year</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sync me-1"></i> Update Report
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Yearly Summary -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-line me-1"></i>
                    Yearly Profitability Summary (@selectedYear)
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card mb-3 border-left-primary">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Total Revenue</div>
                                            <div class="h5 mb-0 font-weight-bold">R @yearlyTotals.Revenue.ToString("N2")</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-3 border-left-warning">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Total Expenses</div>
                                            <div class="h5 mb-0 font-weight-bold">R @yearlyTotals.Costs.ToString("N2")</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-3 @(yearlyTotals.Profit >= 0 ? "border-left-success" : "border-left-danger")">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold @(yearlyTotals.Profit >= 0 ? "text-success" : "text-danger") text-uppercase mb-1">
                                                Net Profit</div>
                                            <div class="h5 mb-0 font-weight-bold">R @yearlyTotals.Profit.ToString("N2")</div>
                                            <div class="small mt-2">@yearlyProfitMargin.ToString("F1")% Profit Margin</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Monthly Profitability Chart -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Monthly Profitability Trend
                </div>
                <div class="card-body">
                    <canvas id="monthlyProfitabilityChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Monthly Details Table -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Monthly Profitability Details (@selectedYear)
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Revenue (ZAR)</th>
                            <th>Expenses (ZAR)</th>
                            <th>Profit (ZAR)</th>
                            <th>Profit Margin</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (monthlyData != null && monthlyData.Any())
                        {
                            foreach (var item in monthlyData)
                            {
                                var status = item.Profit >= 0 ? "profit" : "loss";
                                var statusClass = status == "profit" ? "text-success" : "text-danger";
                                var statusIcon = status == "profit" ? "fa-arrow-up" : "fa-arrow-down";
                                
                                <tr>
                                    <td>@item.MonthName</td>
                                    <td class="text-end">R @item.Revenue.ToString("N2")</td>
                                    <td class="text-end">R @item.Costs.ToString("N2")</td>
                                    <td class="text-end @statusClass">R @item.Profit.ToString("N2")</td>
                                    <td class="text-end">@item.ProfitMargin.ToString("F1")%</td>
                                    <td class="@statusClass">
                                        <i class="fas @statusIcon me-1"></i>
                                        @(status == "profit" ? "Profit" : "Loss")
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No data available for the selected year.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th>TOTAL</th>
                            <th class="text-end">R @yearlyTotals.Revenue.ToString("N2")</th>
                            <th class="text-end">R @yearlyTotals.Costs.ToString("N2")</th>
                            <th class="text-end @(yearlyTotals.Profit >= 0 ? "text-success" : "text-danger")">
                                R @yearlyTotals.Profit.ToString("N2")
                            </th>
                            <th class="text-end">@yearlyProfitMargin.ToString("F1")%</th>
                            <th class="@(yearlyTotals.Profit >= 0 ? "text-success" : "text-danger")">
                                <i class="fas @(yearlyTotals.Profit >= 0 ? "fa-arrow-up" : "fa-arrow-down") me-1"></i>
                                @(yearlyTotals.Profit >= 0 ? "Net Profit" : "Net Loss")
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Profitability Analysis Card -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-chart-pie me-1"></i>
            Profitability Analysis
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <canvas id="marginTrendChart" height="300"></canvas>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-3">Profitability Analysis for @selectedYear</h5>
                    
                    @{
                        var averageMargin = monthlyData != null && monthlyData.Any() 
                            ? monthlyData.Average(m => (double)m.ProfitMargin) 
                            : 0;
                            
                        var bestMonthMargin = monthlyData != null && monthlyData.Any() 
                            ? monthlyData.Max(m => (double)m.ProfitMargin) 
                            : 0;
                            
                        var worstMonthMargin = monthlyData != null && monthlyData.Any() 
                            ? monthlyData.Min(m => (double)m.ProfitMargin) 
                            : 0;
                            
                        var bestMonth = monthlyData != null && monthlyData.Any()
                            ? monthlyData.OrderByDescending(m => m.ProfitMargin).First().MonthName
                            : "N/A";
                            
                        var worstMonth = monthlyData != null && monthlyData.Any()
                            ? monthlyData.OrderBy(m => m.ProfitMargin).First().MonthName
                            : "N/A";
                            
                        var profitableMonths = monthlyData != null
                            ? monthlyData.Count(m => m.Profit > 0)
                            : 0;
                    }
                    
                    <div class="mb-3">
                        <p><strong>Average Profit Margin:</strong> @averageMargin.ToString("F1")%</p>
                        <p><strong>Best Performing Month:</strong> @bestMonth (@bestMonthMargin.ToString("F1")%)</p>
                        <p><strong>Worst Performing Month:</strong> @worstMonth (@worstMonthMargin.ToString("F1")%)</p>
                        <p><strong>Profitable Months:</strong> @profitableMonths of @(monthlyData?.Count ?? 0)</p>
                    </div>
                    
                    <div class="alert @(yearlyProfitMargin >= 15 ? "alert-success" : yearlyProfitMargin >= 5 ? "alert-warning" : "alert-danger")">
                        <i class="fas @(yearlyProfitMargin >= 15 ? "fa-thumbs-up" : yearlyProfitMargin >= 5 ? "fa-exclamation-triangle" : "fa-exclamation-circle") me-2"></i>
                        <strong>Profitability Assessment:</strong>
                        @if (yearlyProfitMargin >= 15)
                        {
                            <span>Excellent profitability with a margin above 15%.</span>
                        }
                        else if (yearlyProfitMargin >= 10)
                        {
                            <span>Good profitability with a margin between 10-15%.</span>
                        }
                        else if (yearlyProfitMargin >= 5)
                        {
                            <span>Moderate profitability with a margin between 5-10%.</span>
                        }
                        else if (yearlyProfitMargin >= 0)
                        {
                            <span>Low profitability with a margin between 0-5%.</span>
                        }
                        else
                        {
                            <span>Operating at a loss with a negative profit margin.</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Monthly Profitability Chart
        var ctxMonthly = document.getElementById('monthlyProfitabilityChart').getContext('2d');
        var monthlyData = @Html.Raw(Json.Serialize(monthlyData));
        
        if (monthlyData && monthlyData.length > 0) {
            var months = monthlyData.map(item => item.MonthName);
            var revenues = monthlyData.map(item => item.Revenue);
            var costs = monthlyData.map(item => item.Costs);
            var profits = monthlyData.map(item => item.Profit);
            
            var monthlyProfitabilityChart = new Chart(ctxMonthly, {
                type: 'bar',
                data: {
                    labels: months,
                    datasets: [
                        {
                            label: 'Revenue',
                            data: revenues,
                            backgroundColor: 'rgba(78, 115, 223, 0.5)',
                            borderColor: 'rgba(78, 115, 223, 1)',
                            borderWidth: 1,
                            order: 2
                        },
                        {
                            label: 'Expenses',
                            data: costs,
                            backgroundColor: 'rgba(246, 194, 62, 0.5)',
                            borderColor: 'rgba(246, 194, 62, 1)',
                            borderWidth: 1,
                            order: 3
                        },
                        {
                            label: 'Profit',
                            data: profits,
                            backgroundColor: 'rgba(28, 200, 138, 0.5)',
                            borderColor: 'rgba(28, 200, 138, 1)',
                            borderWidth: 1,
                            type: 'line',
                            fill: false,
                            tension: 0.4,
                            order: 1,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Amount (ZAR)'
                            }
                        },
                        y1: {
                            position: 'right',
                            grid: {
                                drawOnChartArea: false
                            },
                            title: {
                                display: true,
                                text: 'Profit (ZAR)'
                            }
                        }
                    }
                }
            });
        }
        
        // Profit Margin Trend Chart
        var ctxMargin = document.getElementById('marginTrendChart').getContext('2d');
        
        if (monthlyData && monthlyData.length > 0) {
            var months = monthlyData.map(item => item.MonthName);
            var margins = monthlyData.map(item => item.ProfitMargin);
            
            // Generate the background colors based on the profit margin values
            var backgroundColors = margins.map(value => {
                if (value >= 15) return 'rgba(28, 200, 138, 0.5)';
                if (value >= 5) return 'rgba(246, 194, 62, 0.5)';
                return 'rgba(231, 74, 59, 0.5)';
            });
            
            var borderColors = margins.map(value => {
                if (value >= 15) return 'rgba(28, 200, 138, 1)';
                if (value >= 5) return 'rgba(246, 194, 62, 1)';
                return 'rgba(231, 74, 59, 1)';
            });
            
            var marginTrendChart = new Chart(ctxMargin, {
                type: 'bar',
                data: {
                    labels: months,
                    datasets: [{
                        label: 'Profit Margin (%)',
                        data: margins,
                        backgroundColor: backgroundColors,
                        borderColor: borderColors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Profit Margin (%)'
                            }
                        }
                    }
                }
            });
        }
        
        // Initialize DataTables
        $(document).ready(function() {
            $('table').DataTable({
                responsive: true,
                pageLength: 12,
                order: [[0, 'asc']]
            });
        });
    </script>
} 