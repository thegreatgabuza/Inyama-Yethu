@{
    ViewData["Title"] = "Revenue Report";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    
    var startDate = (DateTime)ViewData["StartDate"];
    var endDate = (DateTime)ViewData["EndDate"];
    var abattoirSales = ViewData["AbattoirSales"] as List<dynamic>;
    var directSalesByProduct = ViewData["DirectSalesByProduct"] as List<dynamic>;
    var directSalesByTownship = ViewData["DirectSalesByTownship"] as List<dynamic>;
    var totalAbattoirRevenue = (double)ViewData["TotalAbattoirRevenue"];
    var totalDirectSalesRevenue = (double)ViewData["TotalDirectSalesRevenue"];
    var totalRevenue = (double)ViewData["TotalRevenue"];
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Revenue Report</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Financial Records</a></li>
        <li class="breadcrumb-item active">Revenue Report</li>
    </ol>
    
    <!-- Report Filter -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Report Period
        </div>
        <div class="card-body">
            <form asp-action="RevenueReport" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" value="@startDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="@endDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i> Generate Report
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Revenue Summary -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie me-1"></i>
                    Revenue Summary (@startDate.ToString("dd MMM yyyy") - @endDate.ToString("dd MMM yyyy"))
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <canvas id="revenuePieChart" height="300"></canvas>
                        </div>
                        <div class="col-md-4">
                            <div class="list-group">
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-industry me-2 text-primary"></i>
                                        Abattoir Sales
                                    </div>
                                    <span class="badge bg-primary rounded-pill">R @totalAbattoirRevenue.ToString("N2")</span>
                                </div>
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-store me-2 text-success"></i>
                                        Direct Sales
                                    </div>
                                    <span class="badge bg-success rounded-pill">R @totalDirectSalesRevenue.ToString("N2")</span>
                                </div>
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center fw-bold">
                                    <div>
                                        <i class="fas fa-calculator me-2"></i>
                                        TOTAL
                                    </div>
                                    <span class="badge bg-dark rounded-pill">R @totalRevenue.ToString("N2")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Abattoir Sales Detail -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-industry me-1"></i>
            Abattoir Sales Detail
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Number of Pigs</th>
                            <th>Revenue (ZAR)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (abattoirSales != null && abattoirSales.Any())
                        {
                            foreach (var item in abattoirSales)
                            {
                                <tr>
                                    <td>@item.ShipmentDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.NumberOfPigs</td>
                                    <td>R @item.Revenue.ToString("N2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No abattoir sales recorded for this period.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th>Total</th>
                            <th>-</th>
                            <th>R @totalAbattoirRevenue.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Direct Sales by Product -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-shopping-basket me-1"></i>
            Direct Sales by Product
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-8">
                    <canvas id="productSalesChart" height="300"></canvas>
                </div>
                <div class="col-md-4">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Qty</th>
                                    <th>Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (directSalesByProduct != null && directSalesByProduct.Any())
                                {
                                    foreach (var item in directSalesByProduct.Take(5))
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>R @item.Revenue.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center">No data</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Revenue (ZAR)</th>
                            <th>% of Direct Sales</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (directSalesByProduct != null && directSalesByProduct.Any())
                        {
                            foreach (var item in directSalesByProduct)
                            {
                                var percentOfTotal = totalDirectSalesRevenue > 0 ? (item.Revenue * 100 / totalDirectSalesRevenue) : 0;
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>R @item.Revenue.ToString("N2")</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                 style="width: @(percentOfTotal.ToString("F1"))%;" 
                                                 aria-valuenow="@percentOfTotal" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @(percentOfTotal.ToString("F1"))%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No direct sales recorded for this period.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th>Total</th>
                            <th>-</th>
                            <th>R @totalDirectSalesRevenue.ToString("N2")</th>
                            <th>100%</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Direct Sales by Township -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-map-marker-alt me-1"></i>
            Direct Sales by Township
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-8">
                    <canvas id="townshipSalesChart" height="300"></canvas>
                </div>
                <div class="col-md-4">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Township</th>
                                    <th>Orders</th>
                                    <th>Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (directSalesByTownship != null && directSalesByTownship.Any())
                                {
                                    foreach (var item in directSalesByTownship.Take(5))
                                    {
                                        <tr>
                                            <td>@(string.IsNullOrEmpty(item.Township) ? "Unknown" : item.Township)</td>
                                            <td>@item.OrderCount</td>
                                            <td>R @item.Revenue.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center">No data</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Township</th>
                            <th>Number of Orders</th>
                            <th>Revenue (ZAR)</th>
                            <th>% of Direct Sales</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (directSalesByTownship != null && directSalesByTownship.Any())
                        {
                            foreach (var item in directSalesByTownship)
                            {
                                var percentOfTotal = totalDirectSalesRevenue > 0 ? (item.Revenue * 100 / totalDirectSalesRevenue) : 0;
                                <tr>
                                    <td>@(string.IsNullOrEmpty(item.Township) ? "Unknown" : item.Township)</td>
                                    <td>@item.OrderCount</td>
                                    <td>R @item.Revenue.ToString("N2")</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-info" role="progressbar" 
                                                 style="width: @(percentOfTotal.ToString("F1"))%;" 
                                                 aria-valuenow="@percentOfTotal" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @(percentOfTotal.ToString("F1"))%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No direct sales recorded for this period.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th>Total</th>
                            <th>-</th>
                            <th>R @totalDirectSalesRevenue.ToString("N2")</th>
                            <th>100%</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Revenue Pie Chart
        var revenueCtx = document.getElementById('revenuePieChart').getContext('2d');
        var revenuePieChart = new Chart(revenueCtx, {
            type: 'pie',
            data: {
                labels: ['Abattoir Sales', 'Direct Sales'],
                datasets: [{
                    data: [
                        @totalAbattoirRevenue,
                        @totalDirectSalesRevenue
                    ],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(75, 192, 192, 0.7)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                var label = context.label || '';
                                var value = context.raw || 0;
                                var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                var percentage = total > 0 ? Math.round((value / total) * 100) : 0;
                                return label + ': R' + value.toFixed(2) + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });
        
        // Product Sales Chart
        var productCtx = document.getElementById('productSalesChart').getContext('2d');
        var productData = @Html.Raw(Json.Serialize(directSalesByProduct?.Take(10).ToList()));
        
        if (productData && productData.length > 0) {
            var productNames = productData.map(item => item.ProductName);
            var productRevenues = productData.map(item => item.Revenue);
            
            var productSalesChart = new Chart(productCtx, {
                type: 'bar',
                data: {
                    labels: productNames,
                    datasets: [{
                        label: 'Revenue (ZAR)',
                        data: productRevenues,
                        backgroundColor: 'rgba(75, 192, 192, 0.5)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    indexAxis: 'y',
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Revenue (ZAR)'
                            }
                        }
                    }
                }
            });
        }
        
        // Township Sales Chart
        var townshipCtx = document.getElementById('townshipSalesChart').getContext('2d');
        var townshipData = @Html.Raw(Json.Serialize(directSalesByTownship?.Take(10).ToList()));
        
        if (townshipData && townshipData.length > 0) {
            var townships = townshipData.map(item => item.Township || "Unknown");
            var townshipRevenues = townshipData.map(item => item.Revenue);
            var orderCounts = townshipData.map(item => item.OrderCount);
            
            var townshipSalesChart = new Chart(townshipCtx, {
                type: 'bar',
                data: {
                    labels: townships,
                    datasets: [{
                        label: 'Revenue (ZAR)',
                        data: townshipRevenues,
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Orders',
                        data: orderCounts,
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1,
                        type: 'line',
                        yAxisID: 'y1'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            type: 'linear',
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Revenue (ZAR)'
                            }
                        },
                        y1: {
                            beginAtZero: true,
                            type: 'linear',
                            position: 'right',
                            grid: {
                                drawOnChartArea: false
                            },
                            title: {
                                display: true,
                                text: 'Number of Orders'
                            }
                        }
                    }
                }
            });
        }
        
        // Initialize DataTables
        $(document).ready(function() {
            $('table.table-hover').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[2, 'desc']]
            });
        });
    </script>
} 