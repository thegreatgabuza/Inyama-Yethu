@{
    ViewData["Title"] = "Expense Report";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    
    var startDate = (DateTime)ViewData["StartDate"];
    var endDate = (DateTime)ViewData["EndDate"];
    var feedCosts = ViewData["FeedCosts"] as List<dynamic>;
    var healthcareCosts = ViewData["HealthcareCosts"] as List<dynamic>;
    var transportCosts = ViewData["TransportCosts"] as List<dynamic>;
    var otherCosts = ViewData["OtherCosts"] as List<dynamic>;
    var totalFeedCost = (double)ViewData["TotalFeedCost"];
    var totalHealthcareCost = (double)ViewData["TotalHealthcareCost"];
    var totalTransportCost = (double)ViewData["TotalTransportCost"];
    var totalOtherCost = (double)ViewData["TotalOtherCost"];
    var totalCost = (double)ViewData["TotalCost"];
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Expense Report</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Financial Records</a></li>
        <li class="breadcrumb-item active">Expense Report</li>
    </ol>
    
    <!-- Report Filter -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Report Period
        </div>
        <div class="card-body">
            <form asp-action="ExpenseReport" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" value="@startDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="@endDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i> Generate Report
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Expense Summary -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie me-1"></i>
                    Expense Summary (@startDate.ToString("dd MMM yyyy") - @endDate.ToString("dd MMM yyyy"))
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <canvas id="expensePieChart" height="300"></canvas>
                        </div>
                        <div class="col-md-4">
                            <div class="list-group">
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-utensils me-2 text-primary"></i>
                                        Feed Costs
                                    </div>
                                    <span class="badge bg-primary rounded-pill">R @totalFeedCost.ToString("N2")</span>
                                </div>
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-heartbeat me-2 text-danger"></i>
                                        Healthcare Costs
                                    </div>
                                    <span class="badge bg-danger rounded-pill">R @totalHealthcareCost.ToString("N2")</span>
                                </div>
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-truck me-2 text-success"></i>
                                        Transport Costs
                                    </div>
                                    <span class="badge bg-success rounded-pill">R @totalTransportCost.ToString("N2")</span>
                                </div>
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-ellipsis-h me-2 text-warning"></i>
                                        Other Costs
                                    </div>
                                    <span class="badge bg-warning rounded-pill">R @totalOtherCost.ToString("N2")</span>
                                </div>
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center fw-bold">
                                    <div>
                                        <i class="fas fa-calculator me-2"></i>
                                        TOTAL
                                    </div>
                                    <span class="badge bg-dark rounded-pill">R @totalCost.ToString("N2")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Feed Costs Detail -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-utensils me-1"></i>
            Feed Costs by Type
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Feed Type</th>
                            <th>Quantity (kg)</th>
                            <th>Cost (ZAR)</th>
                            <th>% of Feed Costs</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (feedCosts != null && feedCosts.Any())
                        {
                            foreach (var item in feedCosts)
                            {
                                var percentOfTotal = totalFeedCost > 0 ? (item.Cost * 100 / totalFeedCost) : 0;
                                <tr>
                                    <td>@item.FeedType</td>
                                    <td>@item.Quantity.ToString("F1") kg</td>
                                    <td>R @item.Cost.ToString("N2")</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-primary" role="progressbar" 
                                                 style="width: @(percentOfTotal.ToString("F1"))%;" 
                                                 aria-valuenow="@percentOfTotal" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @(percentOfTotal.ToString("F1"))%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No feed costs recorded for this period.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th>Total</th>
                            <th>-</th>
                            <th>R @totalFeedCost.ToString("N2")</th>
                            <th>100%</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Healthcare Costs Detail -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-heartbeat me-1"></i>
            Healthcare Costs by Type
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Record Type</th>
                            <th>Number of Records</th>
                            <th>Cost (ZAR)</th>
                            <th>% of Healthcare Costs</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (healthcareCosts != null && healthcareCosts.Any())
                        {
                            foreach (var item in healthcareCosts)
                            {
                                var percentOfTotal = totalHealthcareCost > 0 ? (item.Cost * 100 / totalHealthcareCost) : 0;
                                <tr>
                                    <td>@item.RecordType</td>
                                    <td>@item.Count</td>
                                    <td>R @item.Cost.ToString("N2")</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-danger" role="progressbar" 
                                                 style="width: @(percentOfTotal.ToString("F1"))%;" 
                                                 aria-valuenow="@percentOfTotal" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @(percentOfTotal.ToString("F1"))%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No healthcare costs recorded for this period.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th>Total</th>
                            <th>-</th>
                            <th>R @totalHealthcareCost.ToString("N2")</th>
                            <th>100%</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Transport Costs Detail -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-truck me-1"></i>
            Transport Costs Detail
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Number of Pigs</th>
                            <th>Transport Cost (ZAR)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (transportCosts != null && transportCosts.Any())
                        {
                            foreach (var item in transportCosts)
                            {
                                <tr>
                                    <td>@item.ShipmentDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.NumberOfPigs</td>
                                    <td>R @item.TransportCost.ToString("N2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No transport costs recorded for this period.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th>Total</th>
                            <th>-</th>
                            <th>R @totalTransportCost.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Expense Pie Chart
        var ctx = document.getElementById('expensePieChart').getContext('2d');
        var expensePieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Feed Costs', 'Healthcare Costs', 'Transport Costs', 'Other Costs'],
                datasets: [{
                    data: [
                        @totalFeedCost,
                        @totalHealthcareCost,
                        @totalTransportCost,
                        @totalOtherCost
                    ],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(255, 206, 86, 0.7)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                var label = context.label || '';
                                var value = context.raw || 0;
                                var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                var percentage = total > 0 ? Math.round((value / total) * 100) : 0;
                                return label + ': R' + value.toFixed(2) + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });
        
        // Initialize DataTables
        $(document).ready(function() {
            $('table').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[2, 'desc']]
            });
        });
    </script>
} 