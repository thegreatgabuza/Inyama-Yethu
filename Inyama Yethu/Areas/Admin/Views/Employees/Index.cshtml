@model IEnumerable<Inyama_Yethu.Models.Employee>

@{
    ViewData["Title"] = "Employee Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Employee Management</h1>
        <a asp-area="Admin" asp-controller="Employees" asp-action="Create" class="d-none d-sm-inline-block btn btn-primary shadow-sm">
            <i class="fas fa-user-plus fa-sm text-white-50 mr-1"></i> Add New Employee
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Employee Status Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Employees</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Active Employees</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(e => e.IsActive)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Inactive Employees</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(e => !e.IsActive)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-slash fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                New This Month</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(e => e.HireDate.Month == DateTime.Now.Month && e.HireDate.Year == DateTime.Now.Year)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-plus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employees Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Employees</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="employeesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Job Title</th>
                            <th>Phone Number</th>
                            <th>Hire Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr class="@(employee.IsActive ? "" : "table-secondary")">
                                <td>@employee.Id</td>
                                <td>@employee.FullName</td>
                                <td>@employee.Email</td>
                                <td>@employee.JobTitle</td>
                                <td>@employee.PhoneNumber</td>
                                <td>@employee.HireDate.ToShortDateString()</td>
                                <td>
                                    @if (employee.IsActive)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle mr-1"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary btn-sm ml-1">
                                            <i class="fas fa-edit mr-1"></i> Edit
                                        </a>
                                        @if (employee.IsActive)
                                        {
                                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger btn-sm ml-1">
                                                <i class="fas fa-user-slash mr-1"></i> Deactivate
                                            </a>
                                        }
                                        else
                                        {
                                            <form asp-action="Activate" asp-route-id="@employee.Id" method="post" class="d-inline ml-1">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-user-check mr-1"></i> Activate
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#employeesTable').DataTable({
                "order": [[6, "desc"], [1, "asc"]]
            });
            
            // Auto-dismiss alerts
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
} 