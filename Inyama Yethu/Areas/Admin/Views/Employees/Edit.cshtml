@model Inyama_Yethu.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Employee</h1>
        <div>
            <a asp-area="Admin" asp-controller="Employees" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-sm mr-2">
                <i class="fas fa-info-circle mr-1"></i> Details
            </a>
            <a asp-area="Admin" asp-controller="Employees" asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left mr-1"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Edit Employee Information</h6>
                    <span class="badge @(Model.IsActive ? "badge-success" : "badge-secondary") badge-pill py-1 px-3">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Employees" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold required">Full Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter employee's full name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Email" class="font-weight-bold required">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter employee's email address" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">This will be used for system login.</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Phone" class="font-weight-bold">Phone Number</label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter employee's phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Position" class="font-weight-bold">Position</label>
                            <input asp-for="Position" class="form-control" placeholder="Enter employee's position or role" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="HireDate" class="font-weight-bold required">Hire Date</label>
                            <input asp-for="HireDate" class="form-control" type="date" value="@Model.HireDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="IsActive" class="custom-control-input" />
                                <label asp-for="IsActive" class="custom-control-label">Active Employee</label>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                            <small class="form-text text-muted">Uncheck this box to deactivate the employee.</small>
                        </div>
                        
                        <hr class="mt-4 mb-4" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-area="Admin" asp-controller="Employees" asp-action="Index" class="btn btn-light">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .required:after {
            content: " *";
            color: red;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Additional form validation if needed
        });
    </script>
} 