<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Portal - Inyama Yethu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inyama_Yethu.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: var(--inyama-orange);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Employee" asp-controller="Dashboard" asp-action="Index" style="color: var(--inyama-white); font-weight: bold;">Inyama Yethu Farm Portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color: var(--inyama-white);" asp-area="Employee" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: var(--inyama-white);" asp-area="Employee" asp-controller="Tasks" asp-action="Index">My Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: var(--inyama-white);" asp-area="Employee" asp-controller="Livestock" asp-action="Index">Livestock</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color: var(--inyama-white);" href="#" id="recordsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Records
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="recordsDropdown">
                                <li><a class="dropdown-item" asp-area="Employee" asp-controller="FeedRecords" asp-action="Index">Feed Records</a></li>
                                <li><a class="dropdown-item" asp-area="Employee" asp-controller="HealthRecords" asp-action="Index">Health Records</a></li>
                                <li><a class="dropdown-item" asp-area="Employee" asp-controller="HealthRecords" asp-action="MortalityRecord">Record Mortality</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: var(--inyama-white);" asp-area="Employee" asp-controller="Attendance" asp-action="Index">My Attendance</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a id="checkInButton" asp-area="Employee" asp-controller="Attendance" asp-action="CheckIn" class="btn btn-outline-light me-2">Check In</a>
                        <a id="checkOutButton" asp-area="Employee" asp-controller="Attendance" asp-action="CheckOut" class="btn btn-outline-light">Check Out</a>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group mt-3">
                    <a asp-area="Employee" asp-controller="Dashboard" asp-action="Index" class="list-group-item list-group-item-action bg-inyama-orange text-white">
                        My Dashboard
                    </a>
                    <a asp-area="Employee" asp-controller="Tasks" asp-action="TodaysTasks" class="list-group-item list-group-item-action">
                        Today's Tasks
                    </a>
                    <a asp-area="Employee" asp-controller="Tasks" asp-action="UpcomingTasks" class="list-group-item list-group-item-action">
                        Upcoming Tasks
                    </a>
                    <a asp-area="Employee" asp-controller="Matings" asp-action="Index" class="list-group-item list-group-item-action">
                        Breeding Records
                    </a>
                    <a asp-area="Employee" asp-controller="FeedRecords" asp-action="Index" class="list-group-item list-group-item-action">
                        Feed Records
                    </a>
                    <a asp-area="Employee" asp-controller="HealthRecords" asp-action="Index" class="list-group-item list-group-item-action">
                        Health Records
                    </a>
                    <a asp-area="Employee" asp-controller="Farrowings" asp-action="Index" class="list-group-item list-group-item-action">
                        Farrowings
                    </a>
                    <a asp-area="Employee" asp-controller="PigletProcessing" asp-action="Index" class="list-group-item list-group-item-action">
                        Piglet Processing
                    </a>
                </div>
            </div>
            <div class="col-md-9">
                <main role="main" class="pb-3">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer">
        <div class="container">
            <span style="color: var(--inyama-orange);">&copy; 2025 - Inyama Yethu Farm Portal</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 