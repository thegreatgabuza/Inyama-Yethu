@model Inyama_Yethu.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Animal</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Employee" asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Employee" asp-controller="Livestock" asp-action="Index">Livestock</a></li>
        <li class="breadcrumb-item active">Delete Animal</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Warning: Delete Animal
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5 class="alert-heading">Are you sure you want to delete this animal?</h5>
                <p>This action cannot be undone. All related records will be permanently removed.</p>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h5>Basic Information</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Tag Number</th>
                            <td>@Model.TagNumber</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>@Model.Status</td>
                        </tr>
                        <tr>
                            <th>Birth Date</th>
                            <td>@(Model.BirthDate?.ToString("yyyy-MM-dd") ?? "Not recorded")</td>
                        </tr>
                        <tr>
                            <th>Weight</th>
                            <td>@(Model.Weight != null ? $"{Model.Weight:F1} kg" : "Not recorded")</td>
                        </tr>
                        <tr>
                            <th>Created Date</th>
                            <td>@Model.CreatedAt.ToString("yyyy-MM-dd")</td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6">
                    <h5>Parentage & Notes</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Mother</th>
                            <td>@(Model.Mother?.TagNumber ?? "Not recorded")</td>
                        </tr>
                        <tr>
                            <th>Father</th>
                            <td>@(Model.Father?.TagNumber ?? "Not recorded")</td>
                        </tr>
                        <tr>
                            <th>Notes</th>
                            <td>@(string.IsNullOrEmpty(Model.Notes) ? "No notes" : Model.Notes)</td>
                        </tr>
                    </table>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4 text-center">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div> 