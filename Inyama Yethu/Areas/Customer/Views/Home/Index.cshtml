@model List<Inyama_Yethu.Models.Product>
@{
    ViewData["Title"] = "Home";
    Layout = "_CustomerLayout";
}

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Inyama Yethu</h1>
        <p class="lead">Quality meats for township shisanyamas since 2015.</p>
        <hr class="my-4">
        <p>We provide the freshest farm-to-table pork products for your business.</p>
        <a class="btn btn-primary btn-lg" href="#featured-products" role="button">View Products</a>
    </div>

    <section id="featured-products" class="my-5">
        <h2 class="text-center mb-4">Featured Products</h2>
        
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            }
                            else
                            {
                                <img src="/images/default-product.jpg" class="card-img-top" alt="Default product image">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                <p class="card-text"><strong>Price:</strong> R@product.Price.ToString("F2")</p>
                                <p class="card-text"><small class="text-muted">Available: @product.StockQuantity in stock</small></p>
                            </div>
                            <div class="card-footer">
                                <a asp-area="Customer" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                                <a asp-area="Customer" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-success">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-4">
                <a asp-area="Customer" asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">View All Products</a>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p>No products available at the moment. Please check back later.</p>
            </div>
        }
    </section>

    <section class="my-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Why Choose Us?</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">✓ Farm-fresh pork products</li>
                            <li class="list-group-item">✓ Ethically raised animals</li>
                            <li class="list-group-item">✓ Competitive wholesale pricing</li>
                            <li class="list-group-item">✓ Reliable delivery to your business</li>
                            <li class="list-group-item">✓ Supporting local South African farming</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Our Services</h5>
                    </div>
                    <div class="card-body">
                        <p>We offer a range of services to support your shisanyama business:</p>
                        <div class="row">
                            <div class="col-6">
                                <div class="text-center mb-3">
                                    <i class="fas fa-truck fa-3x mb-2 text-success"></i>
                                    <h6>Delivery</h6>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center mb-3">
                                    <i class="fas fa-box fa-3x mb-2 text-success"></i>
                                    <h6>Bulk Orders</h6>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center mb-3">
                                    <i class="fas fa-calendar-alt fa-3x mb-2 text-success"></i>
                                    <h6>Standing Orders</h6>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center mb-3">
                                    <i class="fas fa-headset fa-3x mb-2 text-success"></i>
                                    <h6>Customer Support</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div> 